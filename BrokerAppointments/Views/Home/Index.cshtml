@model List<ParsedAppointment>;

@{
    ViewData["Title"] = "Home Page";
}

<h1>Bonjour</h1>

<hr/>

<h4 style="margin-bottom: 15px;">Prochains rendez-vous</h4>
<table class="table table-sm table-striped table-bordered">
    <thead>
    <tr>
        <th>
            Date et heure
        </th>
        <th>
            Sujet
        </th>
        <th>
            Courtier
        </th>
        <th>
            Client
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @item.DateTime
            </td>
            <td>
                @item.Subject
            </td>
            <td>
                @item.BrokerName
            </td>
            <td>
                @item.CustomerName
            </td>
            <td class="unstyled">
                <a asp-controller="Appointment" class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.AppointmentId">Détails...</a>
                <a asp-controller="Appointment" class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.AppointmentId">✎</a>
                <a asp-controller="Appointment" class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.AppointmentId">✖</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="container text-center">
    <a asp-controller="Appointment" asp-action="Index">Voir plus...</a>
</div>
