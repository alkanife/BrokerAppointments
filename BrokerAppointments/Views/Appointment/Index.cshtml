@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tous les rendez-vous</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Créer un nouveau rendez-vous</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Date et heure
            </th>
            <th>
                Sujet
            </th>
            <th>
                Courtier
            </th>
            <th>
                Client
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.DateHour
            </td>
            <td>
                @item.Subject
            </td>
            <td>
                @item.BrokerName
            </td>
            <td>
                @item.CustomerName
            </td>
            <td>
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.AppointmentId">Voir en détail</a>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.AppointmentId">Modifier</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.AppointmentId">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
