@model BrokerAppointments.Models.AppointmentModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Cr√©ation d'un nouveau rendez-vous</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateHour" class="control-label">Date et heure</label>
                <input asp-for="DateHour" class="form-control" />
                <span asp-validation-for="DateHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label">Sujet du rendez-vous</label>
                <textarea asp-for="Subject" class="form-control"></textarea>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrokerId" class="control-label">Identifiant du courtier</label>
                <input asp-for="BrokerId" class="form-control" />
                <span asp-validation-for="BrokerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label">Identifiant du client</label>
                <input asp-for="CustomerId" class="form-control" />
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmer" class="btn btn-primary" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Annuler</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

