@model IEnumerable<BrokerAppointments.Models.CustomerModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tous les clients</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Nom
            </th>
            <th>
                Prénom
            </th>
            <th>
                Adresse mail
            </th>
            <th>
                Numéro de téléphone
            </th>
            <th>
                Budget ($)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                <a class="btn btn-sm btn-primary text-white" asp-controller="Appointment" asp-action="Create" asp-route-id="@item.CustomerId">+ RDV</a>
                <a class="btn btn-sm btn-secondary text-white" asp-action="Details" asp-route-id="@item.CustomerId">Détails...</a>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.CustomerId">✎</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.CustomerId">✖</a>
            </td>
        </tr>
}
    </tbody>
</table>
