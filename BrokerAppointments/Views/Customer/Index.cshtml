@model IEnumerable<BrokerAppointments.Models.CustomerModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tous les clients</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Ajouter un nouveau client</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nom
            </th>
            <th>
                Prénom
            </th>
            <th>
                Adresse mail
            </th>
            <th>
                Numéro de téléphone
            </th>
            <th>
                Budget ($)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.CustomerId">Voir en détail</a>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.CustomerId">Modifier</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.CustomerId">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
